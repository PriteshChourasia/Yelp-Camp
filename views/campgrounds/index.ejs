<% layout('layouts/boilerplate') %>

    <h1 class="text-center mb-3">All Camps</h1>
    <%for (let camp of campgrounds){%>
        <div class="container card mb-5 ">
            <div class=" row">
                <div class="col-md-3">
                    <img src="<%=camp.image%>" class="img-fluid rounded-start">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=camp.title%>
                        </h5>
                        <p class="card-text ">
                            <%=camp.description%>
                        </p>
                        <p class="card-text"><small class="text-body-secondary">
                                <%=camp.location%>
                            </small></p>
                        <a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">View <%=camp.title%></a>
                    </div>
                </div>
            </div>
        </div>
        <%}%>